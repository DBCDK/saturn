<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN"
        "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <custom-resource
            factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory"
            res-type="java.lang.String"
            jndi-name="java:app/env/ftp/host">
        <property name="value" value="${ENV=FTP_HOST}"/>
    </custom-resource>
    <custom-resource
            factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory"
            res-type="java.lang.String"
            jndi-name="java:app/env/ftp/port">
        <property name="value" value="${ENV=FTP_PORT}"/>
    </custom-resource>
    <custom-resource
            factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory"
            res-type="java.lang.String"
            jndi-name="java:app/env/ftp/username">
        <property name="value" value="${ENV=FTP_USERNAME}"/>
    </custom-resource>
    <custom-resource
            factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory"
            res-type="java.lang.String"
            jndi-name="java:app/env/ftp/password">
        <property name="value" value="${ENV=FTP_PASSWORD}"/>
    </custom-resource>
    <custom-resource
            factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory"
            res-type="java.lang.String"
            jndi-name="java:app/env/ftp/dir">
        <property name="value" value="${ENV=FTP_DIR}"/>
    </custom-resource>
</resources>
